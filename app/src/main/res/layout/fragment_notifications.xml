<?xml version="1.0" encoding="UTF-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_10"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rela_1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="108dp"
            android:layout_height="89dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="107dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="12dp"
            tools:src="@tools:sample/avatars" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/rela_1"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="个人信息"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/rela_2"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/rela_3"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="订单列表"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/rela_4"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="意见反馈"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
    </RelativeLayout>

</RelativeLayout>